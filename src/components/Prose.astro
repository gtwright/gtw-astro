<div class="prose">
  <slot />
</div>

<style>
  .prose {
    font-family: var(--font-body);
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--color-text);
    max-width: 65ch;
  }

  /* Headings */
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: var(--font-headline);
    line-height: 1.15;
    margin-top: 2.5em;
    margin-bottom: 0.5em;
    font-weight: 600;
  }

  .prose :global(h1) {
    font-size: 2.25rem;
    margin-top: 0;
  }

  .prose :global(h2) {
    font-size: 1.75rem;
  }

  .prose :global(h3) {
    font-size: 1.375rem;
  }

  .prose :global(h4) {
    font-size: 1.125rem;
  }

  /* Paragraphs */
  .prose :global(p) {
    margin-top: 0;
    margin-bottom: 1.5em;
  }

  /* Links */
  .prose :global(a) {
    color: var(--color-accent-interactive);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: opacity 0.15s;
  }

  .prose :global(a:hover) {
    opacity: 0.8;
  }

  /* Blockquotes */
  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent-interactive);
    padding-left: 1.25em;
    margin-left: 0;
    margin-right: 0;
    font-style: italic;
    color: var(--color-muted);
  }

  .prose :global(blockquote p) {
    margin-bottom: 0.75em;
  }

  /* Lists */
  .prose :global(ul),
  .prose :global(ol) {
    padding-left: 1.5em;
    margin-bottom: 1.5em;
  }

  .prose :global(li) {
    margin-bottom: 0.5em;
  }

  .prose :global(li > ul),
  .prose :global(li > ol) {
    margin-top: 0.5em;
    margin-bottom: 0;
  }

  /* Code */
  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background-color: var(--color-surface);
    padding: 0.15em 0.35em;
    border-radius: 4px;
  }

  .prose :global(pre) {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.6;
    background-color: var(--color-text);
    color: var(--color-bg);
    padding: 1.25em 1.5em;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5em;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: inherit;
  }

  /* Horizontal rules */
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 3em 0;
  }

  /* Images */
  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2em 0;
  }

  /* Strong & emphasis */
  .prose :global(strong) {
    font-weight: 600;
  }

  /* Tables */
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5em;
    font-size: 0.95em;
  }

  .prose :global(th),
  .prose :global(td) {
    border-bottom: 1px solid var(--color-border);
    padding: 0.5em 0.75em;
    text-align: left;
  }

  .prose :global(th) {
    font-family: var(--font-ui);
    font-weight: 600;
    font-size: 0.85em;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
  }
</style>
