---
import { SITE } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
  publishedDate?: Date;
  updatedDate?: Date;
}

const {
  title,
  description,
  image = '/og-default.png',
  article = false,
  publishedDate,
  updatedDate,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);

const pageTitle = title === 'Home'
  ? `${SITE.title} | Home`
  : `${title} | ${SITE.title}`;

// JSON-LD: WebSite (all pages)
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: SITE.title,
  url: Astro.site?.href,
  description: SITE.description,
  inLanguage: SITE.language,
};

// JSON-LD: BlogPosting (article pages)
const articleSchema = article && publishedDate ? {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description,
  url: canonicalURL.href,
  image: imageURL.href,
  datePublished: publishedDate.toISOString(),
  ...(updatedDate ? { dateModified: updatedDate.toISOString() } : {}),
  author: {
    '@type': 'Person',
    name: SITE.author.name,
    url: SITE.author.url,
  },
  publisher: {
    '@type': 'Person',
    name: SITE.author.name,
    url: SITE.author.url,
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': canonicalURL.href,
  },
} : null;
---

<title>{pageTitle}</title>
<meta name="description" content={description} />
<meta name="author" content={SITE.author.name} />
<link rel="canonical" href={canonicalURL.href} />

<!-- Open Graph -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={canonicalURL.href} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL.href} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:locale" content={SITE.language} />
{publishedDate && <meta property="article:published_time" content={publishedDate.toISOString()} />}
{updatedDate && <meta property="article:modified_time" content={updatedDate.toISOString()} />}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageURL.href} />

<!-- JSON-LD -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
{articleSchema && (
  <script is:inline type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
)}
