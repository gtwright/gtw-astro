---
import { SITE } from '../consts';

const year = new Date().getFullYear();
---

<footer>
  <div class="mx-auto max-w-3xl px-6 pt-12 pb-10">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="font-(family-name:--font-ui) text-sm text-(--color-muted) m-0">
        &copy; {year} {SITE.title}
      </p>
      <nav class="flex gap-6">
        <a href="/about" class="link-organic font-(family-name:--font-ui) text-sm text-(--color-muted)">
          About
        </a>
        <a href="/rss.xml" class="link-organic font-(family-name:--font-ui) text-sm text-(--color-muted)">
          RSS
        </a>
      </nav>
    </div>
  </div>
</footer>
