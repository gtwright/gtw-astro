---
import { SITE, SOCIAL } from '../consts';
import { Icon } from 'astro-icon/components';
const year = new Date().getFullYear();
---

<footer class="border-t border-(--color-border)">
  <div class="mx-auto max-w-3xl px-6 py-8 flex flex-col sm:flex-row items-center justify-between gap-4">
    <p class="font-(family-name:--font-ui) text-sm text-(--color-muted) m-0">
      &copy; {year} {SITE.title}. All rights reserved.
    </p>
    <nav aria-label="Footer" class="flex gap-4">
      {SOCIAL.map((link: { url: string; name: string; icon: string }) => (
        <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.name} class="text-(--color-muted) hover:text-(--color-accent-interactive) transition-colors">
          <Icon name={link.icon} class="size-5" />
        </a>
      ))}
      <a href="https://github.com/gtwright/gtw-astro" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-(--color-muted) hover:text-(--color-accent-interactive) transition-colors">
        <Icon name="simple-icons:github" class="size-5" />
      </a>
      <a href="/rss.xml" class="font-(family-name:--font-ui) text-sm text-(--color-muted) no-underline transition-colors hover:text-(--color-accent-interactive)">
        RSS
      </a>

    </nav>
  </div>
</footer>
