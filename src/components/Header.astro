---
const navLinks = [
  { href: '/posts', label: 'Posts' },
  { href: '/about', label: 'About' }
];
---

<header data-header class="sticky top-0 z-50 bg-(--color-bg)/80 backdrop-blur-md">
  <nav class="mx-auto flex max-w-3xl items-center justify-between px-6 py-5">
    <a
      href="/"
      class="flex items-baseline font-(family-name:--font-headline) text-lg sm:text-xl tracking-tight text-(--color-text) no-underline"
      style="font-variation-settings: 'opsz' 72, 'wght' 680, 'SOFT' 50, 'WONK' 1;"
    >
      <span>G</span><span class="header-collapse">raham</span><span class="header-collapse">&nbsp;</span><span>W</span><span class="header-collapse">right</span>
    </a>
    <ul class="flex gap-8 list-none m-0 p-0">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="link-organic font-(family-name:--font-ui) text-sm font-medium tracking-wide text-(--color-muted) uppercase hover:text-(--color-text)"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  function update() {
    document.querySelector('[data-header]')?.classList.toggle('is-scrolled', window.scrollY > 50);
  }

  window.addEventListener('scroll', update, { passive: true });
  document.addEventListener('astro:page-load', update);
</script>
