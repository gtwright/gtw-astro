---
import { SITE } from '../consts';

const navLinks = [
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' }
];
---

<header class="sticky top-0 z-50 bg-(--color-bg)/75 backdrop-blur-sm">
  <nav class="mx-auto flex max-w-3xl items-center justify-between px-6 py-4">
    <a href="/" class="font-(family-name:--font-headline) text-2xl font-semibold tracking-tight text-(--color-text) no-underline">
      {SITE.title}
    </a>
    <ul class="flex gap-6 list-none m-0 p-0">
      {navLinks.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="font-(family-name:--font-ui) text-sm font-medium text-(--color-muted) no-underline transition-colors hover:text-(--color-text)"
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
